{% extends 'AppBundle:look4wear:layout.html.twig' %}

{% block content %}
    {% if actualCategory is defined %}
        <h1 class="text-center text-dark">
            <small>
                {{ actualCategory.title }}
                {% if vendor is defined %}
                    {{ vendor.name }}
                {% endif %}
            </small>
        </h1>
    {% endif %}
    {{ include('AppBundle:look4wear:goods.block.html.twig', { 'goods': goods }) }}
    <h2 class="text-center text-dark">
        <small>{{ actualCategory.name }} {{ vendor.name }}</small>
    </h2>
    {% if seoDescription %}
        {{ seoDescription|raw }}
    {% endif %}
    {% if categoryTopVendorsResult %}
        {{ include('AppBundle:look4wear:top.vendors.block.html.twig', { 'categoryTopVendorsResult': categoryTopVendorsResult, 'title': 'Другие бренды этой категории', 'vendorAlias': vendorAlias }) }}
    {% endif %}
    {% if shops %}
        {{ include('AppBundle:look4wear:shops.block.html.twig', { 'shops': shops, 'title': 'Магазины-партнёры' }) }}
    {% endif %}
    {% if otherCategories %}
        {{ include('AppBundle:look4wear:other.categories.block.html.twig', { 'otherCategories': otherCategories, 'title': 'Другие категории этого бренда' }) }}
    {% endif %}
{% endblock %}
