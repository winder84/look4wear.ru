{% if goods is defined %}
    {% if pageTitle %}
        <div class="titleDiv">
            <h1>{{ pageTitle }}</h1>
        </div>
    {% endif %}
    {% if category and category.childrenCategories|length > 0 %}
        {% for childrenCategory in category.childrenCategories %}
            {% if not loop.first %}
                |
            {% endif %}
            <a class="childrenCategoryLink" href="/category/{{ childrenCategory.alias }}"><h4>{{ childrenCategory.name }}</h4></a>
        {% endfor %}
    {% endif %}
    <div class="row">
        {% for goodsItem in goods %}
            <div class="col-sm-4 portfolio-item" data-goods-id="{{ goodsItem.id }}">
                <a target="_blank" rel="nofollow" href="{{ goodsItem.url|replace({'http:': ''}) }}" class="portfolio-link">
                    <div class="caption">
                        <div class="caption-content">
                            <h3>
                                {{ goodsItem.getVendor.name }}
                                <br />
                                {{ goodsItem.name|length > 30 ? goodsItem.name|slice(0, 30) ~ '...' : goodsItem.name  }}
                            </h3>
                            <h4>
                                Цена:
                                {% if goodsItem.oldPrice %}
                                    <span class="oldPrice">{{ goodsItem.oldPrice }} руб</span>
                                    <br />
                                {% endif %}
                                <span class="goodsPrice">{{ goodsItem.price }} руб</span>
                            </h4>
                        </div>
                    </div>
                    <div class="goodsListImage">
                        {% if goodsItem.pictures %}
                            <img class="img-responsive" src="{{ goodsItem.pictures.0 | my_replace | imagine_filter('my_thumb') }}" alt="..." />
                        {% endif %}
                    </div>
                </a>
            </div>
        {% endfor %}
    </div>
{% endif %}