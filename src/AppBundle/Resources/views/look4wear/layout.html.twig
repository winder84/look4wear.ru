{% extends 'AppBundle:look4wear:base.html.twig' %}
{% block metatags %}
    {{ include('AppBundle:look4wear:meta.tags.html.twig', {'metaTags' : metaTags}) }}
{% endblock %}
{% block counters %}
    {% if (app.environment == 'prod') and ('.lan' not in app.request.host) %}
        {{ include('AppBundle:look4wear:counters.block.html.twig') }}
    {% endif %}
{% endblock %}

{% block header %}
    <section class="banner" role="banner">
        <header id="header">
            <div class="header-content clearfix">
                <a class="logo col-sm-1" href="/">
                    <img src="/bundles/app/images/logo_L4W.png" width="50px" title="look4wear.ru - сервис поиска одежды." alt="look4wear - сервис поиска одежды.">
                </a>
                <nav class="navigation" role="navigation">
                    <ul class="primary-nav menuUl">
                        <li class="col-sm-5 searchFormLi">
                            {{ include('AppBundle:look4wear:search.form.html.twig') }}
                        </li>
                        <li><a href="/">Главная</a></li>
                        <li><a href="/catalog_page">Каталог</a></li>
                        <li><a href="/">О пректе</a></li>
                        <li><a href="/site_map">Карта сайта</a></li>
                    </ul>
                </nav>
                <a href="#" class="nav-toggle">Menu<span></span></a>
            </div>
        </header>
    </section>
{% endblock %}
{% block body %}
    <section id="portfolio">
        <div class="container clearfix">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <div class="section">
                    </div>
                </div>
            </div>
            {% if breadcrumbs is defined %}
                <nav aria-label="breadcrumb" role="navigation">
                    <ol class="breadcrumb">
                        {% for breadcrumb in breadcrumbs %}
                            <li class="breadcrumb-item"><a href="{{ breadcrumb.link }}">{{ breadcrumb.title }}</a></li>
                        {% endfor %}
                    </ol>
                </nav>
            {% endif %}
            {% block content %}
            {% endblock %}
        </div>
    </section>
{% endblock %}
{% block footer %}
