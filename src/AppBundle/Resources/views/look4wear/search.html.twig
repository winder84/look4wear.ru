{% extends 'AppBundle:look4wear:layout.html.twig' %}

{% block content %}
    {{ include('AppBundle:look4wear:search.form.html.twig') }}
    {% if goods is defined %}
        <div style="margin: 0 auto; max-width: 150px;">
            <h3>Всего - {{ totalCount }}</h3>
        </div>
        <div class="row">
            {% for goodsItem in goods %}
                <div class="col-md-3">
                    <div class="thumbnail">
                        {% if goodsItem.pictures %}
                            <img src="{{ goodsItem.pictures.0|replace({'http:': ""}) }}" data-src="{{ goodsItem.pictures.0|replace({'http:': ""}) }}" alt="...">
                        {% endif %}
                        <div class="caption">
                            <h5>
                                {{ goodsItem.getVendor.name }}
                                <br />
                                {{ goodsItem.name }}
                            </h5>
                            <p>Цена: {{ goodsItem.price }} руб</p>
                            {#<p>{{ goodsItem.description|slice(0,100) }}</p>#}
                            <p>
                                <a href="#" class="btn btn-primary" role="button">Подробнее</a>
                            </p>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% endif %}
{% endblock %}
